<!DOCTYPE html>
<html>
<head>
  <title>Railsblog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="topbar"></div>
		<a href="/"><div class="title"><strong>blah</strong>.BLAH.<strong>blog</strong></div></a>

		<div class='corner'>
				<% if current_user != nil %>
			<%= link_to current_user.username, "/users/#{current_user.id}/profiles", class: 'boxes' %>
			<%= link_to "Log Out", '/logout', class: 'boxes' %>
				<% else %>
			<%= link_to "Sign Up", new_user_path, class: 'boxes' %>
			<%= link_to "Log In", '/login', class: 'boxes' %>
				<% end %>
		</div>

<%= yield %>

</body>
</html>
